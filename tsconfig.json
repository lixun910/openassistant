{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "declaration": false,
    "declarationMap": false,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "allowJs": false,
    "checkJs": false,
    "skipLibCheck": true,
    "noEmit": true,
    "noImplicitAny": false,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@openassistant/core/(.*)": ["./packages/core/src/$1"],
      "@openassistant/core": ["./packages/core/src"]
    }
  },
  "exclude": ["node_modules", "dist", "coverage"]
}
