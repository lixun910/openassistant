{
  "name": "openassistant-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/common",
    "packages/core",
    "packages/ui",
    "packages/duckdb",
    "packages/geoda",
    "packages/echarts",
    "packages/keplergl",
    "website"
  ],
  "scripts": {
    "clean": "rm -rf packages/*/dist",
    "start": "lerna run start --scope=@openassistant/ui",
    "build": "lerna run build --concurrency=1",
    "test": "node --experimental-vm-modules node_modules/.bin/jest --coverage",
    "lint": "eslint packages/*/src --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint packages/*/src --ext .js,.jsx,.ts,.tsx --fix",
    "update-version": "lerna version --force-publish",
    "website:start": "cd website && yarn start"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.2",
    "@testing-library/react": "^16.0.1",
    "@types/jest": "^29.5.13",
    "@types/node": "^22.5.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^8.19.0",
    "@typescript-eslint/parser": "^8.19.0",
    "esbuild": "^0.24.2",
    "esbuild-plugin-d.ts": "^1.3.1",
    "esbuild-plugin-tailwindcss": "^1.2.1",
    "eslint": "^8.0.0",
    "eslint-config-next": "14.2.21",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^25.0.1",
    "lerna": "^8.1.9",
    "prettier": "^3.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-test-renderer": "^18.3.1",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.4"
  },
  "volta": {
    "node": "20.18.1",
    "yarn": "4.6.0"
  },
  "resolutions": {
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "esbuild": "0.24.2",
    "styled-components": "6.1.8"
  },
  "packageManager": "yarn@4.6.0"
}
