{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "jsx": "react-jsx",
    "lib": ["dom", "es2020"],
    "outDir": "dist",
    "baseUrl": ".",
    "rootDir": "src",
    "declaration": true,
    "declarationMap": false,
    "declarationDir": "dist",
    "emitDeclarationOnly": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "../../../node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.stories.tsx"
  ]
}
