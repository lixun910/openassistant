{
  "name": "@openassistant/ui",
  "version": "0.3.0",
  "description": "Chat UI components for OpenAssistant",
  "author": "Xun Li<lixun910@gmail.com>",
  "license": "MIT",
  "main": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.esm.js",
      "require": "./dist/index.cjs.js"
    },
    "./bundle": {
      "types": "./dist/index.d.ts",
      "import": "./dist/bundle.js",
      "require": "./dist/bundle.js"
    },
    "./dist/index.css": "./dist/bundle.css"
  },
  "browser": "./dist/index.iife.js",
  "files": [
    "dist",
    "src",
    "README.md",
    "package.json"
  ],
  "scripts": {
    "test": "node --experimental-vm-modules ../../node_modules/.bin/jest --coverage",
    "start": "node esbuild.config.mjs --start",
    "build": "node esbuild.config.mjs",
    "watch": "node esbuild.config.mjs --watch",
    "declaration": "tsc --project tsconfig.json",
    "prepublishOnly": "yarn build",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@iconify/react": "^5.1.0",
    "@nextui-org/react": "^2.6.10",
    "@openassistant/core": "workspace:*",
    "framer-motion": "^11.15.0",
    "html2canvas": "^1.4.1",
    "next-themes": "^0.4.4",
    "react-audio-voice-recorder": "^2.2.0",
    "react-markdown": "^10.0.0",
    "remark-gfm": "^4.0.1",
    "tailwindcss": "^3.4.17"
  },
  "peerDependencies": {
    "react": ">=18.2",
    "react-dom": ">=18.2"
  },
  "gitHead": "d79ee3046ad7f103054a1856c808684fa64e8017"
}
