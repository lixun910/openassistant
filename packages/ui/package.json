{
  "name": "@openassistant/ui",
  "version": "0.0.1",
  "description": "Chat UI components for OpenAssistant",
  "author": "Xun Li<lixun910@gmail.com>",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    "import": "./dist/index.esm.js",
    "require": "./dist/index.cjs.js"
  },
  "browser": "./dist/index.iife.js",
  "files": [
    "dist",
    "src",
    "README.md",
    "package.json"
  ],
  "scripts": {
    "test": "node --experimental-vm-modules ../../node_modules/.bin/jest --coverage",
    "start": "node esbuild.config.mjs --start",
    "build": "node esbuild.config.mjs",
    "declaration": "tsc --declaration --emitDeclarationOnly --declarationDir ./dist --outDir ./dist --project tsconfig.json",
    "prepublishOnly": "npm run build && npm run declaration"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@iconify/react": "^5.1.0",
    "@nextui-org/react": "^2.6.8",
    "@openassistant/core": "*",
    "framer-motion": "^11.15.0",
    "html2canvas": "^1.4.1",
    "next-themes": "^0.4.4",
    "react": "^18.2.0",
    "react-audio-voice-recorder": "^2.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.4.17"
  },
  "devDependencies": {
    "@testing-library/dom": "^9.0.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.0.0"
  }
}
